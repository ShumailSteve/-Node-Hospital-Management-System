 <form action="{{url}}" method="GET">
                <div class="row filter-row">
                    <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                            <label class="focus-label">Patient Name</label>
                            <input type="text" class="form-control floating" name="name">
                  </div>
                   <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                            <label class="focus-label">Age</label>
                            <input type="number" min="0" class="form-control floating" name="age">
                  </div>
                    <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                            <label class="focus-label">Disease</label>
                            <input type="text" class="form-control floating" name="disease">
                  </div>
                 <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                     <div class="form-group">
                        <label> Admitted Before</label>
                        <input class="form-control floating " type="date" name ="admittedBefore">
                    </div>
                </div>

                 <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                     <div class="form-group">
                        <label> Admitted After</label>
                        <input class="form-control floating " type="date" name ="admittedAfter">
                    </div>
                </div>
                    <div class="col-sm-6 col-md-3 col-lg-3 col-xl-2 col-12">
                        <button class="btn btn-success btn-block btn-primary submit-btn" style="margin-top: 20px;"> Search</button>
                       
                    </div>
             </div>
            </form>