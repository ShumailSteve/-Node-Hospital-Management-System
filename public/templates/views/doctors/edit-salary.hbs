<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/favicon.ico">
    <title>Edit Doctor Salary</title>
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
</head>

<body>
    <div class="main-wrapper">
        {{>header}}
        <div class="page-wrapper">
            {{>messages}}
            <div class="content">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h4 class="page-title">Edit Doctor Salary</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <form action="/doctors/edit-salary/{{id}}?_method=PATCH" method="POST">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Doctor Name</label>
                                        <input class="form-control"  type="text" name="name"  value="{{name}}" disabled >
                                    </div>
                                </div>
                                <div class="col-sm-6">
									<div class="form-group">
										<label>Basic Salary<span class="text-danger">*</span></label>
										<input class="form-control" type="number" min="0" name="basicSalary" value="{{basicSalary}}">
									</div>
                                </div>
                                <div class="col-sm-6">
									<div class="form-group">
										<label>Accommodation</label>
										<input class="form-control" type="number" min="0" name="accommodation" value="{{accommodation}}">
									</div>
                                </div>
                                <div class="col-sm-6">
									<div class="form-group">
										<label>Conveyance</label>
										<input class="form-control" type="number" min="0" name="conveyance" value="{{conveyance}}">
									</div>
                                </div>
                                 <div class="col-sm-6">
									<div class="form-group">
										<label>Other Expenses</label>
										<input class="form-control" type="number" min="0" name="otherExpenses" value="{{otherExpenses}}"> 
									</div>
                                </div>
                            </div>
                            
                            <div class="m-t-20 text-center">
                                <button class="btn btn-primary submit-btn">Edit Salary</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
		</div>
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="/assets/js/jquery-3.2.1.min.js"></script>
	<script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/jquery.slimscroll.js"></script>
    <script src="/assets/js/select2.min.js"></script>
    <script src="/assets/js/app.js"></script>
</body>


