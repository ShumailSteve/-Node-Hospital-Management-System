<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="ssets/img/favicon.ico">
    <title>Profile</title>
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">

</head>

<body>
    <div class="main-wrapper">
 {{>header}}
        <div class="page-wrapper">
             
            <div class="content">
               
                <div class="row">
                    {{>messages}}
                    <div class="col-sm-7 col-6">
                        <h4 class="page-title">My Profile</h4>
                   </div>

                    <div class="col-sm-5 col-6 text-right m-b-30">
                        <a href="/doctors/edit-doctor/{{doc._id}}" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Edit Profile</a>
                    </div>
                </div>
                  
                <div class="card-box profile-header">
                  
                    <div class="row">
                        <div class="col-md-12">
                            <div class="profile-view">
                                <div class="profile-img-wrap">
                                    <div class="profile-img">
                                        <a href="#"><img class="avatar" alt="" src="data:image;base64,{{doc.img}}" ></a>
                                    </div>
                                </div>
                                <div class="profile-basic">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="profile-info-left">
                                                <h3 class="user-name m-t-0 mb-0">{{doc.firstName}} &nbsp;{{doc.lastName}}</h3>
                                                
                                                <div class="staff-id">Employee ID : DR-0{{doc.id}}</div>
                                                
                                            </div>
                                        </div>
                                        <div class="col-md-7">
                                            <ul class="personal-info">
                                                 <li>
                                                    <span class="title">Department:</span>
                                                    <span class="text">{{doc.department}}</span>
                                                </li>
                                                <li>
                                                    <span class="title">Phone:</span>
                                                    <span class="text">{{doc.phone}}</span>
                                                </li>
                                                <li>
                                                    <span class="title">Email:</span>
                                                    <span class="text">{{doc.email}}</span>
                                                </li>
                                                <li>
                                                    <span class="title">Birthday:</span>
                                                    <span class="text">{{doc.DOB}}</span>
                                                </li>
                                                <li>
                                                    <span class="title">Address:</span>
                                                    <span class="text">{{doc.address}}, {{doc.city}}, {{doc.country}}</span>
                                                </li>
                                                <li>
                                                    <span class="title">Gender:</span>
                                                    <span class="text">{{doc.gender}}</span>
                                                </li>
                                                <li>
                                                    <span class="title">Education:</span>
                                                    <span class="text">{{doc.educationDetails}}</span>
                                                </li>
                                                <li>
                                                    <span class="title">Available Days</span>
                                                    <span class="text">{{doc.availableDays}}</span>
                                                </li>
                                                <li>
                                                    <span class="title">Joining Date</span>
                                                    <span class="text">{{doc.joiningDate}}</span>
                                                </li>
                                               <li>
                                                    <span class="title">Available From</span>
                                                    <span class="text">{{doc.availableFrom}}</span>
                                                </li>
                                                 <li>
                                                    <span class="title">Available Till</span>
                                                    <span class="text">{{doc.availableTill}}</span>
                                                </li>
                                                <li>
                                                    <span class="title">Status</span>
                                                    <span class="text">{{doc.status}}</span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>                        
                        </div>
                    </div>
                    
                </div>
           
        </div>
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="/assets/js/jquery-3.2.1.min.js"></script>
	<script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/jquery.slimscroll.js"></script>
    <script src="/assets/js/app.js"></script>
</body>

</html>