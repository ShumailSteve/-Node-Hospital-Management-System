<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/favicon.ico">
    <title>Employee Salary</title>
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
</head>

<body>
    <div class="main-wrapper">
        {{>header}}
        <div class="page-wrapper">
            {{>messages}}
            <div class="content">
                 <div class="row">
                   <div class="col-sm-4 col-5">
                        <h4 class="page-title">Employee Salary</h4>
                </div>
              {{>_empSearchForm}}
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped custom-table datatable">
                                <thead>
                                    <tr>
                                        <th>Employee ID</th>
                                        <th>Employee Name</th>
                                        <th>Email</th>
                                        <th>Joining Date</th>
                                        <th>Basic Salary</th>
                                        <th>other Expenses</th>
                                        <th>Total Salary</th>
                                        <th>Payslip</th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                </thead>
                            {{#each employees}}
                                <tbody>
                                    <tr>
                                        <td>Emp-0{{id}}</td>
                                        <td>
											<a>{{firstName}} {{lastName}}</a>
                                        </td>                                        
                                        <td>{{email}}</td>
                                        <td>{{joiningDate}}</td>
                                         <td>${{basicSalary}}</td>
                                          <td>${{otherExpenses}}</td>
                                        <td  id="totalSalary">
                                            <script>
                                                var totalSalary = {{basicSalary}} + {{otherExpenses}};
                                                document.getElementById("totalSalary").innerHTML = '$'+totalSalary;
                                            </script>
                                        </td>
                                        <td><a class="btn btn-sm btn-primary" href="/employees/salary/salary-view">Generate Slip</a></td>
                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" href="/doctors/edit-salary/{{_id}}"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_salary"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            {{/each}}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
         </div>
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="/assets/js/jquery-3.2.1.min.js"></script>
	<script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/jquery.dataTables.min.js"></script>
    <script src="/assets/js/dataTables.bootstrap4.min.js"></script>
    <script src="/assets/js/jquery.slimscroll.js"></script>
    <script src="/assets/js/select2.min.js"></script>
    <script src="/assets/js/moment.min.js"></script>
    <script src="/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="/assets/js/app.js"></script>
</body>

</html>